<% if (user) { %>
    <% include ./_header %>
        <div class="topnav" id="myTopnav">
            <a>BUZZN</a>
            <a>HOME</a>
            <a>ABOUT</a>
            <a href="/users/logout" style="float:right;">LOGOUT</a>
            <a href="#map" onclick="document.getElementById('usermap').style.display='block'" style="float:right;">CREATE MAP</a>
            <a href="/users/show" style="float:right;">PROFILE</a>
            <a class="name" style="float:right;">Welcome <%= user %>!</a>
        </div>
        <div id="usermap" class="w3-modal">
            <div class="w3-modal-content w3-animate-zoom">
                <div class="w3-container w3-black">
                    <span onclick="document.getElementById('usermap').style.display='none'; " class="w3-button w3-display-topright w3-large">x</span>
                    <h1>Create a Map</h1>
                </div>
                <div class="w3-container">
                    <span>Hello World!</span>
                </div>
            </div>
        </div>
        <% } else { %>
            <div class="topnav" id="myTopnav">
                <a>BUZZN</a>
                <a>HOME</a>
                <a>ABOUT</a>
                <a href="#signup" onclick="document.getElementById('signup').style.display='block'" style="float:right;">SIGN UP</a>
                <a href="#login" onclick="document.getElementById('login').style.display='block'" style="float:right;">LOGIN</a>
            </div>
            <div id="signup" class="w3-modal">
                <div class="w3-modal-content w3-animate-zoom">
                    <div class="w3-container w3-black">
                        <span onclick="document.getElementById('signup').style.display='none'; " class="w3-button w3-display-topright w3-large">x</span>
                        <h1>Sign Up</h1>
                    </div>
                    <div class="w3-container">
                        <% include ./users/_userRegister %>
                    </div>
                </div>
            </div>
            <div id="login" class="w3-modal">
                <div class="w3-modal-content w3-animate-zoom">
                    <div class="w3-container w3-black">
                        <span onclick="document.getElementById('login').style.display='none'" class="w3-button w3-display-topright w3-large">x</span>
                        <h1>Login</h1>
                    </div>
                    <div class="w3-container">
                        <% include ./users/_login %>
                    </div>
                </div>
            </div>
            <% };  %>